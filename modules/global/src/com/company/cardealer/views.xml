<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<views xmlns="http://schemas.haulmont.com/cuba/view.xsd">
    <view class="com.company.cardealer.entity.Country"
          extends="_local"
          name="country-view">
        <property name="name"/>
        <property name="code"/>
    </view>
    <view class="com.company.cardealer.entity.ExtUser"
          extends="user.browse"
          name="user.browse"
          overwrite="true">
        <property name="country"
                  view="_minimal">
            <property name="code"/>
        </property>
        <property name="userRoles"
                  view="_minimal">
            <property name="user"
                      view="_minimal">
                <property name="email"/>
            </property>
            <property name="role"
                      view="_minimal"/>
        </property>
    </view>
    <view class="com.company.cardealer.entity.ExtUser"
          extends="user.edit"
          name="user.edit"
          overwrite="true"
          systemProperties="true">
        <property name="country"
                  view="_minimal">
            <property name="code"/>
        </property>
    </view>
    <view class="com.company.cardealer.entity.Automaker"
          extends="_local"
          name="automaker-edit">
        <property name="country"
                  view="_minimal">
        </property>
        <property name="carModel"
                  view="_minimal"/>
    </view>
    <view class="com.company.cardealer.entity.CarModel"
          extends="_local"
          name="carModel-view">
        <property name="automaker"
                  view="_minimal"/>
        <property name="equipment"
                  view="_minimal">
            <property name="cost"/>
            <property name="carType"/>
            <property name="note"/>
        </property>
    </view>
    <view class="com.company.cardealer.entity.Automaker"
          extends="_local"
          name="automaker-view">
        <property name="name"/>
        <property name="code"/>
        <property name="country"
                  view="_minimal">
            <property name="name"/>
        </property>
        <property name="carModel"
                  view="_minimal">
            <property name="name"/>
        </property>
    </view>
    <view class="com.company.cardealer.entity.Car"
          extends="_local"
          name="car-view">
        <property name="automaker"
                  view="_minimal">
            <property name="name"/>
        </property>
        <property name="carModel"
                  view="_minimal">
            <property name="name"/>
        </property>
        <property name="equipment"
                  view="_minimal">
            <property name="name"/>
        </property>
        <property name="name"/>
        <property name="issueYear"/>
        <property name="carCost"/>
    </view>
    <view class="com.company.cardealer.entity.CarPurchaseRequest"
          extends="_local"
          name="carPurchaseRequest-view">
        <property name="car"
                  view="_minimal"/>
        <property name="person"
                  view="_minimal">
            <property name="phone"/>
        </property>
        <property name="manager"
                  view="_minimal"/>
    </view>
    <view class="com.company.cardealer.entity.Person"
          extends="_local"
          name="person-view">
        <property name="carPurchaseRequest"
                  view="_minimal"/>
    </view>
    <view class="com.company.cardealer.entity.LegalPerson"
          extends="_local"
          name="legalPerson-view">
    </view>
    <view class="com.company.cardealer.entity.IndividualPerson"
          extends="_local"
          name="individualPerson-view">
    </view>
    <view class="com.company.cardealer.entity.ProcAttachment"
          extends="_local"
          name="procAttachment-view">
        <property name="carPurchaseRequest"
                  view="_minimal">
            <property name="state"/>
        </property>
    </view>
</views>

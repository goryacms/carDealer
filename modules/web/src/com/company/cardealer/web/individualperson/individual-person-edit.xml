<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.cardealer.web.individualperson.IndividualPersonEdit"
        datasource="individualPersonDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.cardealer.web.individualperson">
    <dsContext>
        <datasource id="individualPersonDs"
                    class="com.company.cardealer.entity.IndividualPerson"
                    view="_local"/>
    </dsContext>
    <dialogMode forceDialog="true"
                height="AUTO"
                width="600"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="individualPersonDs">
            <column width="250px">
                <field property="phone"/>
                <field property="nameAndLastName"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
